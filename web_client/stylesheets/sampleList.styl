.g-samples-actions
  float right

  button
    margin-left 10px
    padding 4px 8px

.g-filter-samples
  display table-row
  color #333

  .g-filter-options-button
    color #333
    display table-cell
    border-radius 3px 0 0 3px
    margin-right 0
    border 1px solid #ccc
    background-color #eee

    &:hover
      background-image linear-gradient(to bottom, #e2e2e2 0, #eee 80%)

  .g-filter-field
    display table-cell
    border-radius 0 3px 3px 0
    margin-left 0
    border-left none

.g-samples-list-table

  .g-samples-list-actions
    background linear-gradient(top, #e6e6e6 0, #f7f7f7 8px)
    padding 4px 5px 3px
    background-color #f6f6f6
    border-top 1px solid #ddd

    .g-select-all
      font-size 16px
      background-color green

    .btn-group
      margin-left 10px

    button
      margin-left 10px
      padding 4px 8px

  table
    width 100%

  th
    border-bottom 1px solid #d7d7d7
  tbody>tr
    transition background 0.4s linear

    td
      padding 3px 0
      margin-right 10px

    &:hover
      background-color #f6f6f6

    &.g-highlight
      background-color #f1db74
